<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='invoicing_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="sale_commission_bridge">
                   <div class="o_setting_left_pane">
                       <field name="module_sale_commission"/>
                   </div>
                   <div class="o_setting_right_pane">
                       <label for="module_sale_commission" string="Sales Commission"/>
                       <div class="text-muted mb16">
                            Manage sales &amp; teams targets and commissions
                       </div>
                   </div>
                </div>   
            </xpath>
        </field>
    </record>
</odoo>
